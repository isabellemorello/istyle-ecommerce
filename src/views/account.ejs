<%# Importiamo la navbar %> <%- include("navbar") %> <%#
----------------------------MAIN------------------------------ %>
<div class="container">
  <div class="row">
    <%# MenÃ¹ laterale %>
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3">
      <div class="list-group">
        <a href="/users/me" class="list-group-item list-group-item-action"
          >Il mio account</a
        >
        <a
          href="#"
          class="list-group-item list-group-item-action active"
          id="account"
          >I miei dati</a
        >
        <a
          href="/users/me/orders"
          class="list-group-item list-group-item-action"
          >I miei ordini</a
        >
      </div>
    </div>

    <%# ----------------------------I miei dati------------------------------ %>

    <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8" id="utente">
      <div class="col-12">
        <h2>I miei dati</h2>
        <p id="p">Qui puoi modificare i tuoi dati personali.</p>
        <div id="dati">
          <div class="row">
            <div class="col-xl-1" id="icona">
              <%# Visualizziamo l'icona del profilo %>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="40"
                height="40"
                fill="black"
                class="bi bi-person"
                viewBox="0 0 16 16"
              >
                <path
                  d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"
                />
              </svg>
            </div>
            <div class="col-xl-4" id="specifiche">
              <h6>Nome</h6>
              <%# Visualizziamo il nome dell'utente %>
              <p><%= myAccount.name %> <%= myAccount.surname %></p>
              <br />
              <h6>Indirizzo</h6>
              <%# Visualizziamo l'indirizzo dell'utente %>
              <p><%= myAccount.city %>, <%= myAccount.address %></p>
            </div>
            <div class="col-xl-3" id="specifiche">
              <h6>Telefono cellulare</h6>
              <%# Visualizziamo il numero di cellulare dell'utente %>
              <p><%= myAccount.phone %></p>
            </div>
            <div class="col-xl-3">
              <button class="btn btn-outline" id="modifica">
                <%# Visualizziamo l'icona della matita all'interno del bottone
                "Modifica" %>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-pencil"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"
                  />
                </svg>
                Modifica
              </button>
            </div>
          </div>
          <hr />

          <%# ----------------------------E-mail------------------------------
          %>

          <div class="row">
            <div class="col-xl-1" id="icona">
              <%# Visualizziamo l'icona della busta %>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="40"
                height="40"
                fill="currentColor"
                class="bi bi-envelope"
                viewBox="0 0 16 16"
              >
                <path
                  d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"

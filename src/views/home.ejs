<%- include("navbar") %>

<!-- ----------------------------MAIN------------------------------ -->
<main class="container mb-5">
  <!-- ----------------------------FOTO HOMEPAGE------------------------------ -->
  <div class="container mb-3">
    <div class="col-md-12 shadow-sm">
      <img
        src="images/donna.png"
        alt="shopping-image"
        width="100%"
        height="100%"
      />
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 mt-5">
    <!-- tag ejs per inserire codice javascript => per ogni articolo del catologo vengono inserite le informazioni  -->
    <% products.forEach(item => { %>
    <div class="col">
      <div class="card rounded product-card shadow-sm">
        <div
          class="d-flex flex-column align-items-center justify-content-center h-100"
        >
          <img
            class="card-img-top px-4 py-3"
            src="<%=item.image%>"
            width="350px"
            height="300px"
          />
        </div>
        <div class="card-body d-flex flex-column align-items-stretch">
          <div class="mt-auto">
            <div class="row mx-2">
              <div class="col-8">
                <h5><%= item.name %></h5>
              </div>
              <div class="col-4">
                <h5 class="text-end">€ <%= item.price%></h5>
              </div>
            </div>
            <div class="row mx-2 pt-2">
              <div class="col-12">
                <p><%= item.color %></p>
              </div>
            </div>
          </div>
          <hr class="divider" />
          <div class="row mt-2 mb-4">
            <div class="col-xl-12 col-lg-12 col-md-12 text-end">
              <!-- Cliccando su "Scopri di più" porta alla singola scheda prodotto tramite l'id del prodotto -->
              <a href="/products/<%=item._id%>"
                ><button class="btn btn-md" id="scopri">
                  Scopri di più
                </button></a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>

<!-- ----------------------------FOOTER------------------------------ -->
<%- include("footer") %>
